# Environment Configuration for Marker Engine

# API Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Database (if using external storage)
DATABASE_URL=postgresql://user:password@localhost/marker_engine

# External Services
REDIS_URL=redis://localhost:6379
METRICS_ENDPOINT=http://localhost:9090

# Feature Flags
ENABLE_METRICS=true
ENABLE_CACHING=true
ENABLE_DEBUG_MODE=false

# Performance Tuning
MAX_WORKERS=4
REQUEST_TIMEOUT=30
BATCH_SIZE=100

# File Paths
MARKER_PATH=_Marker_5.0
SCHEMA_PATH=schemata
DETECTOR_REGISTRY=DETECT_/DETECT_registry.json
ARTIFACTS_DIR=artifacts
