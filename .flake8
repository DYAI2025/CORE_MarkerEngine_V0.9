[flake8]
max-line-length = 100
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    .tox,
    .env,
    build,
    dist,
    *.egg-info,
    docs/_build
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    B008,  # do not perform function calls in argument defaults
    C901,  # too complex (handled by max-complexity)
per-file-ignores =
    __init__.py:F401  # imported but unused
    test_*.py:S101  # assert used
    api_service.py:B008  # function calls in defaults for FastAPI
