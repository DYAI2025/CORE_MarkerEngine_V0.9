{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://leandeep.ai/schemas/primary_access_weights_overrides.json",
  "title": "Primary Access Weights Overrides",
  "description": "Schema for primary weights (priorities) for access/aggregations per marker/set",
  "type": "object",
  "required": ["version", "weights"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the weights configuration"
    },
    "weights": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target_id", "weight"],
        "properties": {
          "target_id": {
            "type": "string",
            "pattern": "^(ATO|SEM|CLU|MEMA)_[A-Z0-9_]+$",
            "description": "Target marker identifier"
          },
          "weight": {
            "type": "number",
            "minimum": 0,
            "description": "Priority weight for this marker"
          },
          "context": {
            "type": "object",
            "properties": {
              "lang": {
                "type": "string",
                "enum": ["de", "en", "fr", "es"],
                "description": "Language context filter"
              },
              "channel": {
                "type": "string",
                "enum": ["chat", "audio", "video", "text"],
                "description": "Channel context filter"
              }
            },
            "description": "Optional context filters for this weight"
          }
        }
      }
    }
  }
}
